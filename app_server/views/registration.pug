extends layout
block content
    .container
      h1.form-heading
      .login-form
        .main-div
          .panel
            h2 Register Account
            p Please enter your email, password and phone number
          form#Login
            .form-group
              input#inputEmail.form-control(type='email' placeholder='Email Address')
            .form-group
              input#inputPassword.form-control(type='password' placeholder='Password')
            .form-group
              input#inputPassword.form-control(type='number' placeholder='Phone Number')
            button.btn.btn-primary(type='submit') Register